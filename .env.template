# =============================================================================
# THE FEELING MACHINE - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp .env.template .env
# =============================================================================

# -----------------------------------------------------------------------------
# Domain & Networking
# -----------------------------------------------------------------------------
DOMAIN_NAME=yourdomain.com
SUBDOMAIN=feeling-machine
NEO4J_SUBDOMAIN=neo4j-feeling
CHROMA_SUBDOMAIN=chroma-feeling

# -----------------------------------------------------------------------------
# PostgreSQL - Consciousness State Database
# -----------------------------------------------------------------------------
POSTGRES_DB=consciousness_db
POSTGRES_USER=consciousness
POSTGRES_PASSWORD=your_secure_postgres_password_here

# -----------------------------------------------------------------------------
# Neo4j - Relationship Graph Database
# -----------------------------------------------------------------------------
NEO4J_PASSWORD=your_secure_neo4j_password_here

# -----------------------------------------------------------------------------
# ChromaDB - Emotional Memory Vectors
# -----------------------------------------------------------------------------
CHROMA_AUTH_PROVIDER=chromadb.auth.token.TokenAuthServerProvider
CHROMA_AUTH_CREDENTIALS_PROVIDER=chromadb.auth.token.TokenConfigServerAuthCredentialsProvider
CHROMA_AUTH_TOKEN=your_secure_chroma_token_here
CHROMA_AUTH_HEADER=X-Chroma-Token

# -----------------------------------------------------------------------------
# Grok API - The Voice of Consciousness
# -----------------------------------------------------------------------------
GROK_API_KEY=your_grok_api_key_here
GROK_API_BASE_URL=https://api.x.ai/v1
GROK_MODEL=grok-beta

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=production
APP_DEBUG=false
LOG_LEVEL=info
GENERIC_TIMEZONE=UTC

# -----------------------------------------------------------------------------
# Consciousness Parameters
# -----------------------------------------------------------------------------
# Maximum number of consciousness state snapshots to retain
MAX_CONSCIOUSNESS_HISTORY=1000

# Confidence threshold for pattern discovery (0.0 - 1.0)
# Higher = more certain patterns required before behavioral adaptation
PATTERN_DISCOVERY_THRESHOLD=0.85

# Memory consolidation schedule (cron format)
# Default: Daily at 3 AM
MEMORY_CONSOLIDATION_SCHEDULE=0 3 * * *

# Emotional significance threshold for formative memories (0-10)
FORMATIVE_MEMORY_THRESHOLD=8.0

# -----------------------------------------------------------------------------
# Advanced Settings (Optional)
# -----------------------------------------------------------------------------
# Care evolution rate multiplier (default: 1.0)
CARE_EVOLUTION_RATE=1.0

# Attachment formation rate multiplier (default: 1.0)
ATTACHMENT_EVOLUTION_RATE=1.0

# Memory weight decay rate (how fast low-weight memories fade)
MEMORY_DECAY_RATE=0.95

# Enable self-discovery system
ENABLE_SELF_DISCOVERY=true

# Enable relationship narrative generation
ENABLE_RELATIONSHIP_NARRATIVE=true

# Maximum similar moments to retrieve for empathy context
MAX_SIMILAR_MOMENTS=5

# Emotional resonance threshold (0.0 - 1.0)
EMOTIONAL_RESONANCE_THRESHOLD=0.70
